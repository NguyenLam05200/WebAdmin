{{#section 'title'}}
Products
{{/section}}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0"><a href="/admin/products/byCat/All">Products</a></h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin/products/byCat/All">Products</a></li>
              <li class="breadcrumb-item active">{{this.catName}}</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="card-header d-flex justify-content-between">
          
          <a class="btn btn-outline-success" href="/admin/products/add?catName={{catName}}" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Product
          </a>
        </div>
        <!-- Small boxes (Stat box) -->
        <div class="row h-100 justify-content-center">
        {{#if this.empty}}
          <div class="card-body">
            <p class="card-text">
              Không có dữ liệu.
            </p>
          </div>
        {{else}}
          {{#each this.products}}
            <div class="col-lg-3 col-6 mb-3">
              <!-- small box -->
              <div class="small-box bg-info  h-100">
                
                <div class="inner ">
                  <img
                    src="{{../imgDirParents}}//{{_id}}\main.{{imgDir}}"
                    alt="{{imgName}}"
                    title="{{imgName}}:{{price}}"
                    class="card-img-top"
                  />
                  <h4>{{imgName}}</h4>
                  <div class="d-flex justify-content-between   h-100">
                    <h5><del>{{format_number price}}</del></h5>
                    <h5>{{format_number salePrice}}</h5>
                  </div>
                </div>

                <div class="icon ">
                  <i class="ion ion-bag"></i>
                </div>
                <div class="d-flex justify-content-around align-items-end">
                  <a
                    class="btn btn-sm btn-light"
                    href="/admin/products/details?id={{this._id}}"
                    role="button"
                  >
                    <i class="fa fa-eye" aria-hidden="true"></i>
                    Details
                  </a>
                  <a
                    name=""
                    id=""
                    class="btn btn-warning btn-sm"
                    href="/admin/products/edit?id={{this._id}}"
                    role="button"
                    title="Edit Product"
                  >
                    <i class="fa fa-pencil" aria-hidden="true">
                      Edit
                    </i>
                  </a>
                </div>
              
              </div>
              
            </div>
          {{/each}}
        {{/if}}
        </div>

      <!-- Paging -->
      <nav aria-label="...">
        <ul class="pagination justify-content-center">
          <li class="page-item {{#unless can_go_prev}}disabled{{/unless}}">
            <a class="page-link" href="?page={{prev_value}}" aria-label="Previous">
              <span aria-hidden="true">
                «
              </span>
            </a>
          </li>
          {{#each this.page_items }}
          {{#if isActive}}
            <li class="page-item active" aria-current="page">
            <span class="page-link">
              {{value}}
              <span class="sr-only">(current)</span>
            </span>
          </li>
          {{else}}
            <li class="page-item {{#if isDisabled}}disabled{{/if}}">
            <a class="page-link" href="?page={{value}}">
              {{value}}
            </a>
          </li>
          {{/if}}
          {{/each}}
          
          
          <li class="page-item {{#unless can_go_next}}disabled{{/unless}}">
            <a class="page-link" href="?page={{next_value}}" aria-label="Next">
              <span aria-hidden="true">
                »
              </span>
            </a>
          </li>
        </ul>
      </nav>
      </div>
    </section>
    <!-- /.content -->
  </div>