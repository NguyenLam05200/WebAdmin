<div class="card">
  <div class="card-header d-flex justify-content-between">
    <h4>
      Products
    </h4>
    <a class="btn btn-outline-success" href="/admin/products/add" role="button">
    <i class="fa fa-plus" aria-hidden="true"></i>
      Add Product
    </a>
  </div>
  {{#if this.empty}}
    <div class="card-body">
      <p class="card-text">
        Không có dữ liệu.
      </p>
    </div>
  {{else}}
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" class="text-center">
            ID
          </th>
          <th scope="col">
            Products
          </th>
          <th scope="col">
            Category
          </th>
          <th scope="col">
            Price
          </th>
          <th scope="col">
            Detail
          </th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each this.products}}
          <tr>
            <th scope="row" class="text-center">
              {{_id}}
            </th>
            <td>
              {{Name}}
            </td>
            <td>
              {{Category}}
            </td>
            <td>
              {{Price}}
            </td>
            <td>
              {{Detail}}
            </td>
            <td class="text-right">
              <a
                name=""
                id=""
                class="btn btn-primary btn-sm"
                href="javascript:;"
                role="button"
              >
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
              <a
                name=""
                id=""
                class="btn btn-danger btn-sm"
                href="javascript:;"
                role="button"
              >
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  <div class="card-footer text-muted">
    Footer
  </div>
</div>